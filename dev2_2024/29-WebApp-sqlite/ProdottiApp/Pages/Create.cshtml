@page
@model CreateModel
@{
    ViewData["Title"] = "Crea Prodotto";
}

<h2>Crea un nuovo prodotto</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Prodotto.Nome" class="control-label"></label>
        <input asp-for="Prodotto.Nome" class="form-control" />
        <span asp-validation-for="Prodotto.Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prodotto.Prezzo" class="control-label"></label>
        <input asp-for="Prodotto.Prezzo" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Prodotto.Prezzo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prodotto.CategoriaId" class="control-label"></label>
        <select asp-for="Prodotto.CategoriaId" asp-items="Model.CategorieSelectList" class="form-control">
            <option value="">Seleziona una categoria</option>
        </select>
        <span asp-validation-for="Prodotto.CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Salva</button>
    <a asp-page="Prodotti" class="btn btn-secondary mt-3">Annulla</a>
</form>