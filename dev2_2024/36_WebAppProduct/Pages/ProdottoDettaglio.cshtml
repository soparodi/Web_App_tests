@page
@model ProdottoDettaglioModel
@{
    ViewData ["Title"] = "ProdottoDettaglio";
}

<h1>@ViewData["Title"]</h1>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Dettaglio</th>
                <th>Immagine</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Prodotto.Nome</td>
                <td>@Model.Prodotto.Prezzo</td>
                <td>@Model.Prodotto.Dettaglio</td>
                <td><img src= "@Model.Prodotto.Immagine" alt= "@Model.Prodotto.Immagine" width= "300" height="200" /></td>
            </tr>
        </tbody>
    </table>
    <a asp-page="/Prodotti">Torna a Prodotti</a>
</div>