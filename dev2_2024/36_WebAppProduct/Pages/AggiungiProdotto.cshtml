@page
@model ProdottoDettaglioModel
@{
    ViewData["Title"] = "Aggiungi Prodotto";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="nome">Nome
            <input type="text" class="form-control" name="nome" /></label>
    </div>
    <div class="form-group mb-3">
        <label for="prezzo">Prezzo
            <input type="text" class="form-control" name="prezzo" /></label>
    </div>
    <div class="form-group">
        <label for="dettaglio">Dettaglio
            <input type="text" class="form-control" name="dettaglio" /></label>
    </div>
    <button type="submit" class="btn btn-dark">Aggiungi</button>
</form>