@page
@model DettaglioProdottoModel
@{
    ViewData["Title"] = "Dettaglio Prodotto";
 }

<h1>@ViewData["Title"]</h1>
<h4>Dettaglio prodotto</h4>
<div>
    <table class="table">
        <thead>
            <tr>
              <th>Nome</th>
              <th>Prezzo</th>
              <th>Dettaglio</th>
            </tr>     
        </thead>
        <tbody>
            <tr>
                <td>@Model.Prodotto.Nome</td>
                <td>@Model.Prodotto.Prezzo</td>
                <td>@Model.Prodotto.Dettaglio</td>
            </tr>
        </tbody>
    </table>
    <a asp-page="/Prodotti">Torna a prodotti</a>
</div>