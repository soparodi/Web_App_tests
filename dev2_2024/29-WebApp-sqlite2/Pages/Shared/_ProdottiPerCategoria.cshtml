@{
        string categoria = null;

        //ciclo per estrapolare nome categoria 
        foreach (var p in Model)
        {
                categoria = p.CategoriaNome;
        }

        <h3>Prodotti in @categoria</h3>

        @foreach (var prodotto in Model)
        {

                <a asp-page="/Details" asp-route-id="@prodotto.Id" class="fs-6">@prodotto.Nome</a> // metto il link al prodotto
                <p class="fs-6" style=" display: inline;">@prodotto.Prezzo.ToString("F2") â‚¬</p> // F2 = formatto il prezzo a due decimali
                <p class="fs-6">@prodotto.CategoriaNome</p>
        }
}