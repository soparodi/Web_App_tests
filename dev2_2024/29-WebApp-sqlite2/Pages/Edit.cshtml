@page
@model EditModel
@{
    ViewData["Title"] = "Modifica Prodotto";
}

<h2>@ViewData["Title"]</h2>

<form method="post">

    <div class="form-group">
        <label asp-for="Prodotto.Nome"></label>
        <input type="text" asp-for="Prodotto.Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Prodotto.Prezzo"></label>
        <input type="text" asp-for="Prodotto.Prezzo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Prodotto.CategoriaId"></label>
        <select asp-for="Prodotto.CategoriaId" class="form-control" asp-items="Model.CategorieSelectList">
            <option value="">Seleziona Categoria</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success my-4">Salva</button>
    <a asp-page="Prodotti" class="btn btn-success my-4">Annulla</a>
</form>