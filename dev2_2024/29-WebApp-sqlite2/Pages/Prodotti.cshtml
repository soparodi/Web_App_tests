@page
@model ProdottiModel
@{
    ViewData["Title"] = "Elenco Prodotti";
}

<h2>@ViewData["Title"]</h2>

<a asp-page="Prodotti" class="btn btn-success mb-3">Elenco Prodotti</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prodotto in Model.Prodotti)
        {
            <tr>
                <td>@prodotto.Nome</td>
                <td>@prodotto.Prezzo.ToString("C")</td>
                <td>@prodotto.CategoriaNome</td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Prodotti.Any())
{
    <p class="text-muted">Nessun prodotto disponibile.</p>
}